@page
@model WebApp.Pages.PackageModel
@{
}
<script src="~/js/pages/package.js" asp-append-version="true"></script>

<div class="bs-docs-section">
    <br />

    <div class="row">
        <div class="col-lg-12">
            <table id="tblListPackages" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Id de la habitación</th>
                        <th>Tipo de raza de mascota</th>
                        <th>Tamaño de mascota</th>
                        <th>Agresividad de mascota</th>
                        <th>Fecha de creación</th>
                        <th>Fecha de actualización</th>
                        <th>Estatus</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="bs-component">
                <button id="btnToggleForm" class="source-button btn btn-secondary btn-xs" type="button" tabindex="0">
                    <i class="bi bi-code">Formulario de paquetes</i>
                </button>
                <form>
                    <fieldset>
                        <legend>Formulario pra registrar paquetes</legend>

                        <div class="form-group">
                            <label for="txtPackageId" class="form-label mt-4">Id de servicio</label>
                            <input id="txtPackageId" type="number" class="form-control" placeholder="Ingrese el id del paquete, use solo para actualizar o eliminar">
                        </div>

                        <div class="form-group">
                            <label for="txtName" class="form-label mt-3">Nombre</label>
                            <input id="txtName" type="text" class="form-control"  placeholder="Ingrese el nombre del paquete">
                        </div>

                        <div class="form-group">
                            <label for="txtDescription" class="form-label mt-3">Descripción</label>
                            <input id="txtDescription" type="text" class="form-control"  placeholder="Ingrese la descripción del paquete">
                        </div>

                        <div class="form-group">
                            <label for="txtRoomId" class="form-label mt-3">Id de la habitación</label>
                            <select id="txtRoomId" class="form-control">
                                <option value="1">Habitación 1</option>
                                <option value="2">Habitación 2</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="txtPetBreedType" class="form-label mt-3">Tipo de raza de mascota</label>
                            <input id="txtPetBreedType" type="text" class="form-control"  placeholder="Ingrese el tipo de raza de mascota">
                        </div>
                        
                        <div class="form-group">
                            <label for="txtPetSize" class="form-label mt-3">Tamaño de mascota</label>
                            <input id="txtPetSize" type="text" class="form-control"  placeholder="Ingrese el tamaño de mascota">
                        </div>
                                                
                        <div class="form-group">
                            <label for="txtPetAggressiveness" class="form-label mt-3">Agresividad de mascota</label>
                            <input id="txtPetAggressiveness" type="number" class="form-control"  placeholder="Ingrese la agresividad de mascota">
                        </div>
                                                                        
                        <div class="form-group">
                            <label for="txtStatus" class="form-label mt-3">Estado</label>
                            <input id="txtStatus" type="number" class="form-control"  placeholder="Ingrese el estado del paquete">
                        </div>

                        <div class="mb-2">
                            <label class="form-label">Servicios:</label>
                            <div class="input-group mb-2">
                                <button id="btnAddService" class="btn btn-outline-secondary btn-service" type="button">Agregar servicio</button>
                            </div>
                            <div id="service-group"></div>
                        </div>
                    </fieldset>
                </form>
                <br />

               <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button" tabindex="0"><i class="bi bi-code">Crear</i></button>
                <button id="btnUpdate" class="source-button btn btn-warning btn-xs" type="button" tabindex="0"><i class="bi bi-code">Actualizar</i></button>
                <button id="btnDelete" class="source-button btn btn-danger btn-xs" type="button" tabindex="0"><i class="bi bi-code">Eliminar</i></button>

            </div>
        </div>
    </div>
</div>