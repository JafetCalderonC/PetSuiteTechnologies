@page
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Registro</title>

    <!-- jquery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- sweetalert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!-- signup -->
    <script src="~/js/controlactions.js" asp-append-version="true"></script>
    <script src="~/js/pages/signup.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/pages/signup.css" asp-append-version="true" />

    <!-- favicon.ico -->
    <link href="~/favicon.png" rel="shortcut icon" type="image/x-icon" />
</head>

<body>
    <div class="container mt-5">
        <div class="container">
            <form class="registration-form">
                <h5 class="mb-2 text-center">Bienvenido a PetSuite Technologies</h5>
                <h6 class="text-center mb-3">Registro de Usuario</h6>

                <div class="mb-2">
                    <div id="validationErrors" class="alert alert-danger d-none"></div>
                </div>

                <div class="row">
                    <!-- primera columna -->
                    <div class="col-md-6">
                        <div class="mb-2">
                            <label for="txtFirstName" class="form-label">Nombre:</label>
                            <input id="txtFirstName" type="text" class="form-control" autocomplete="on" />
                        </div>

                        <div class="mb-2">
                            <label for="txtLastName" class="form-label">Apellidos:</label>
                            <input id="txtLastName" type="text" class="form-control" autocomplete="on" />
                        </div>

                        <div class="mb-2">
                            <label for="cbIdentificationType" class="form-label">Tipo de Identificación:</label>
                            <select id="cbIdentificationType" class="form-select">
                                <option selected value="" hidden></option>
                                <option value="national-id">Cédula de Identidad</option>
                                <option value="passport">Pasaporte</option>
                                <option value="dimex">Dimex</option>
                            </select>
                        </div>

                        <div class="mb-2">
                            <label for="txtIdentificationValue" class="form-label">Número de Identificación:</label>
                            <input id="txtIdentificationValue" readonly type="text" class="form-control" autocomplete="off" placeholder="" />
                        </div>

                        <div class="mb-2">
                            <label for="txtAddress" class="form-label">Dirección:</label>
                            <input id="txtAddress" type="text" class="form-control" readonly autocomplete="off" placeholder="Seleccione una ubicación en el mapa" />
                        </div>
                    </div>

                    <!-- segunda columna -->
                    <div class="col-md-6">
                        <div class="mb-2">
                            <label for="txtEmail" class="form-label">Email:</label>
                            <input id="txtEmail" type="email" class="form-control" autocomplete="on" />
                        </div>

                        <div class="mb-2">
                            <label for="profilePicture" class="form-label">Foto de Perfil:</label>
                            <input type="file" class="form-control" id="profilePicture">
                        </div>

                        <div class="mb-2">
                            <label class="form-label">Teléfonos:</label>
                            <div class="input-group mb-2">
                                <button id="btnAddPhone" class="btn btn-outline-secondary btn-phone" type="button">Agregar teléfono</button>
                            </div>
                            <div id="phone-group"></div>
                        </div>
                    </div>
                </div>

                <!-- Map -->
                <div id="map" style="height:250px;" class="mb-3"></div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button id="btnGoToLandigPage" type="button" class="btn mr-4">Cancelar</button>
                    <button id="btnCreate" type="button" class="btn">Registrar</button>
                </div>
            </form>

            <form class="registration-form mt-5">
                <h5 class="mb-2 text-center">¿Ya tienes una cuenta?</h5>
                <button id="btnGoToLogin" type="button" class="btn">Iniciar Sesión</button>
            </form>
        </div>
    </div>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD9BNvpbtqpeND11ZUfZdWjlw33QlNRvh0&callback=initMap"></script>
</body>
</html>

