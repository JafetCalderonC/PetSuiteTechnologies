@page
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de sesión</title>

    <!-- jquery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- sweetalert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!-- login -->
    <script src="~/js/controlactions.js" asp-append-version="true"></script>
    <script src="~/js/pages/login.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/pages/login.css" asp-append-version="true" /> 
</head>

<body>
    <div class="container mt-5">
        <div class="container">
            <form class="login-form">
                <h2 class="mb-2 text-center">Bienvenido a PetSuite Technologies</h2>
                <h3 class="text-center mb-3">Inicio de Sesión</h3>

                <div class="mb-2">
                    <div id="validationErrors" class="alert alert-danger d-none"></div>
                </div>

                <div class="mb-2">
                    <label for="txtEmail" class="form-label">Correo Electrónico:</label>
                    <input id="txtEmail" type="email" class="form-control" autocomplete="off" />
                </div>

                <div class="mb-4">
                    <label for="txtPassword" class="form-label">Contraseña:</label>
                    <input id="txtPassword" type="password" class="form-control" autocomplete="off" />
                </div>

                <hr>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button id="btnForgotPassword" type="button" class="btn">Recuperar Contraseña</button>
                    <button id="btnLogin" type="button" class="btn btn-primary">Iniciar Sesión</button>
                </div>
            </form>
        </div>

        <div class="container">
            <form class="login-form mt-5">
                <h2 class="mb-2 text-center">¿No tienes una cuenta?</h2>

                <button id="btnCreateAccount" type="button" class="btn">Crear Usuario</button>
            </form>
        </div>
</body>
</html>




