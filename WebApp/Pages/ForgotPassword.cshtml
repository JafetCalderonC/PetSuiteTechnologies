@page
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperación de contraseña</title>

    <!-- jquery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- sweetalert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!-- login -->
    <script src="~/js/controlactions.js" asp-append-version="true"></script>
    <script src="~/js/pages/forgot-password.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/pages/forgot-password.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5">
        <div class="container">
            <form class="password-recovery-form">
                <h2 class="mb-3 text-center">¿Olvidaste su contraseña?</h2>
                <h4 class="text-center mb-3">Sentimos que hayas olvidado su contraseña. No te preocupes!<br /> Ingrese su correo electrónico y le enviaremos una contraseña temporal.</h4>

                <p class="alert alert-success d-none" id="txtAlert"></p>

                <div class="mb-3">
                    <input id="txtEmail" type="email" class="form-control" autocomplete="on" />
                </div>

                <div class="d-grid gap-2">
                    <button id="btnForgotPassword" type="button" class="btn btn-primary">Continuar</button>
                </div>
            </form>

            <div class="container">
                <form class="password-recovery-form mt-5">
                    <h2 class="mb-2 text-center">Iniciar Sesión</h2>
                    <button id="btnGoToLogin" type="button" class="btn">Iniciar Sesión</button>
                </form>
            </div>
        </div>
</body>
</html>
